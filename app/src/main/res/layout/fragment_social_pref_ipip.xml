<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mitiPrimaryBlue"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/checkl_ipip"
        android:gravity="center">
        <com.miti.meeti.mitiutil.uihelper.CheckView
            android:id="@+id/check_ipip"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:checkView_strokeColor="@color/mitiOrange"
            app:checkView_strokeWidth="10dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/mitiPrimaryBlue"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:context=".ui.social.pref.social_pref_ipip">
        <LinearLayout
            android:background="@color/mitiPrimaryBlue"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ipip_page_no"
                app:fontFamily="@font/slabo_13px"
                android:textColor="@color/mitiTextBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingBottom="15dp"
                android:text=""
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mitiTextSkyBlue"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Totally Agree"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:tint="@color/mitiOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:src="@drawable/ic_arrow_forward_black_24dp"
                    android:translationY="3dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:textColor="@color/mitiTextSkyBlue"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Totally Disagree"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llipip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:alpha="0.5"
                android:layout_marginTop="20dp"
                android:text="Submit" />
            <Button
                android:id="@+id/button_skip_ipip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:alpha="0.5"
                android:layout_marginTop="20dp"
                android:text="Skip" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>