<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:background="@color/mitiOrange"
        android:id="@+id/Miti_Moodboard_card"
        android:backgroundTint="@color/mitiOrange"
        app:cardBackgroundColor="@color/mitiOrange"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/moodboard_content"
            android:padding="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/slabo_13px"
            android:textColor="@color/mitiPrimaryBlue"
            android:background="@color/mitiOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
        <ImageView
            android:id="@+id/moodboard_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
    </com.google.android.material.card.MaterialCardView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_mood_object"
            android:src="@drawable/ic_check_black_24dp"
            android:layout_gravity="bottom|right"/>
    </FrameLayout>
</LinearLayout>