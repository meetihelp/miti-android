<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:backgroundTint="@color/transparent"
    android:id="@+id/cameralayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.privacy.Camera_moodboard">
        <com.otaliastudios.cameraview.CameraView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            app:cameraWhiteBalance="auto"
            app:cameraAutoFocusMarker="com.otaliastudios.cameraview.markers.DefaultAutoFocusMarker"
            app:cameraHdr="on"
            app:cameraAudio="off"
            app:cameraMode="picture"/>
        <ImageButton
            android:id="@+id/moodboard_camera_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:background="@color/transparent"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/ic_camera_black_24dp"
            android:layout_margin="16dp"/>
        <ImageButton
            android:id="@+id/moodboard_camera_reverse"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:tint="@color/mitiTextBlue"
            android:background="@color/transparent"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_screen_rotation_black_24dp"
            android:layout_margin="16dp"/>
</FrameLayout>