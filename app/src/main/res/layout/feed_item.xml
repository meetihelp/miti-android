<?xml version="1.0" encoding="utf-8"?>
 <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/mitiPrimaryBlue"
        android:minHeight="200dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />
        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            app:chipBackgroundColor="#7FDBFF"
            app:closeIconVisible="false"
            android:checkable="false"
            android:layout_margin="3sp"
            android:layout_width="wrap_content"
            android:id="@+id/label_chip"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:text=""/>
    </FrameLayout>

    <TextView
        android:id="@+id/feed_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="10dp"
        android:text="hey jude"
        android:textColor="@color/mitiTextBlue"
        android:textSize="28sp"
        app:fontFamily="@font/slabo_13px" />

    <TextView
        android:id="@+id/feed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="10dp"
        android:letterSpacing="0.05"
        android:text="hey jude"
        android:textColor="@color/mitiTextBlue2"
        android:textSize="18sp"
        app:fontFamily="@font/montserrat" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            app:chipBackgroundColor="@color/mitiPrimaryBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="false"
            app:chipIcon="@drawable/ic_angry"
            app:chipIconTint="@color/mitiOrange"
            android:layout_marginRight="10dp"
            app:closeIconVisible="false"
            app:showMotionSpec="@anim/nav_default_enter_anim" />
        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            app:chipBackgroundColor="@color/mitiPrimaryBlue"
            android:checkable="false"
            app:showMotionSpec="@anim/nav_default_enter_anim"
            app:closeIconVisible="false"
            android:layout_width="wrap_content"
            app:chipIcon="@drawable/ic_heart"
            app:chipIconTint="@color/mitiOrange"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
 </com.google.android.material.card.MaterialCardView>
