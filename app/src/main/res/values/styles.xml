    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@font/slabo_13px</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- Original AppCompat attributes. -->
        <item name="colorPrimary">@color/mitiOrange</item>
        <item name="colorAccent">@color/mitiTextBlue</item>
        <item name="colorSurface">@color/mitiTextBlue</item>
        <item name="android:textColor">@color/mitiTextBlue</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="android:textColorHint">@color/mitiTextBlue</item>
        <item name="android:editTextStyle">@style/EditTextColor</item>
        <item name="android:textColorSecondary">@color/mitiTextBlue1</item>
        <item name="colorButtonNormal">@color/mitiTextBlue</item>
    </style>
    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/mitiTextBlue</item>
    </style>
    <style name="EditTextColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/mitiTextBlue</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/mitiPrimaryBlue</item>
        <item name="colorBackgroundFloating">@color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:colorBackground">@color/mitiTextSkyBlue</item>
        <item name="android:textColor">@color/mitiPrimaryBlue</item>
    </style>
    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
<!--        <item name="android:windowIsTranslucent">true</item>-->
<!--        <item name="android:paddingTop">20dp</item>-->
<!--        <item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:backgroundDimEnabled">true</item>-->
        <item name="android:windowIsFloating">false</item>
    </style>

